<Window x:Class="Bandit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bandit"
        mc:Ignorable="d"
        Title="Try your luck." Height="450" Width="800">
    <Grid Background="#FFCA851F">
        <TextBox x:Name="WindowA" TextAlignment="Center" HorizontalAlignment="Left" Margin="199,191,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" Height="50" FontSize="24" FontWeight="Bold" Background="#FF03E6F7" BorderBrush="#FF060606"/>
        <TextBox x:Name="WindowB" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,191,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" Height="50" FontSize="24" FontWeight="Bold" Background="#FF03E6F7" BorderBrush="#FF070808"/>
        <TextBox x:Name="WindowC" TextAlignment="Center" HorizontalAlignment="Left" Margin="480,191,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" Height="50" FontWeight="Bold" FontSize="24" Background="#FF03E6F7" BorderBrush="#FF040404"/>
        <Label Content="Lucky Strike" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top" Width="400" Height="91" FontSize="48" FontFamily="Magneto"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="610,337,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Click="Button_Click"/>
        <Label x:Name="NoCashLbl" Content="" HorizontalAlignment="Left" Margin="200,337,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
